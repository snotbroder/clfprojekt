---
import "../styles/global.css";
import MainLayout from "../layouts/MainLayouts.astro";
import Background from "../layouts/Backgroundindex.astro"
import Kort from "../components/Kort.astro";
import Buttons from "../components/Buttons.astro";
import PopUp from "../components/PopUp.astro";
import Footer from "../components/Footer.astro";

---

<MainLayout>
    <Background />
    <article id="introduktion">
    <div class="grid_1fr-1fr">
       <div>
         <h1>COPENHAGEN <br> LIGHT FESTIVAL </h1>
         <h3>2.- 25. FEBRUAR</h3>
       </div>
       <div class="index_textbox">
         <div>
            <p class="bodytext-regular">
                Copenhagen Light Festival er en årligt tilbagevendende festival for lys, 
                der transformerer det stille og kolde vintermørke til en særlig fejring af 
                lysende oplevelser midt i København.</p>
            <a class="hyperlink" href="/">Læs mere om os her</a>
         </div>
        </div>
    </div>
    </article>

    <article id="cirkler">
        <a class="vaerker cirkel" href="/vaerker">
            <div><h2>VÆRKER</h2></div>
        </a>
        <a class="events cirkel" href="/">
            <div><h2>EVENTS</h2></div>
        </a>
        <a class="kort cirkel" href="/map">
            <div><h2>KORT</h2></div>
        </a>
    </article>

    <Kort />

    <div class="knap">
    <Buttons class="knap" variant="primary" state="" animation="">Se kort over festivalen</Button>
    </div>

   <article id="fotokonkurrence">
    <div class="container">
        <div class="image-stack">
          <div class="image-stack__item image-stack__item--bottom">
            <img src="/collage/v3.avif" alt="">
          </div>
          <div class="image-stack__item image-stack__item--top">
            <img src="/collage/v4.avif" alt="">
          </div>
          <div class="image-stack__item image-stack__item--3 v1" >
            <img src="/collage/v1.avif" alt="">
          </div>
          <div class="image-stack__item image-stack__item--mid">
            <img src="/collage/v2.avif" alt="">
          </div>
        </div>
        <div class="text">
            <h2>FOTOKONKURRENCE</h2>
            <p class="bodytext-regular">
                Igen i år inviterer vi lysfestivalens gæster, 
                 til at dele billeder af jeres yndlings lysværker og stemningsbilleder
                 fra jeres ture rundt i byen.
            </p> 
            <a class="hyperlink" href="/">Læs mere om fotokonkurrencen her</a>
        </div>
      </div>
      

