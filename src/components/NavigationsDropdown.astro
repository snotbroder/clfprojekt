---
import "../styles/global.css";
const { header, underknap1, underknap2, underknap3, underknap4, underknap5} = Astro.props;

---

<div class="dropdown">
  <div class="dropbtn"><div>{header}</div> <div class="icon">icon</div></div>
  <div class="dropdown-content">
    <a href="/multiview"><div>{underknap1} </div></a>
    <a href="/"><div>{underknap2} </div></a>
  <a href="/map"><div>{underknap3} </div></a>
  <a href="/map"><div>{underknap4} </div></a>
  <a href="/map"><div>{underknap5} </div></a>
  </div>
</div>

<style>
    .icon{
      background-image: url(/icons/arrowdown.svg);
        color: transparent;
       background-size: contain;
       background-repeat: no-repeat;
       width: 2rem;
       margin-top: 0.6rem;
       margin-left: 1rem;
    }
  /* Style The Dropdown Button */
  .dropbtn {
    text-align: left;
    display: flex;   
    align-self: center;
    justify-content: space-between;
    color: var(--text-color);
    padding: 0 0.8rem 0 0.5rem;
    cursor: pointer;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-size: 1.8rem;
    border-bottom: 1px  solid var(--text-color);
  }

  .dropbtwn:first-child{
    max-width: 200px;
    text-align: left;
  }
  a {
    text-decoration: none;
} 
/* Links inside the dropdown */
  .dropdown-content div {
    display: flex;
    justify-content: space-between;
    color: var(--text-color);
    margin: 12px 16px;
    margin-bottom: 1.2rem;
    padding-top: 0.2rem;
    text-decoration: none;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-size: 1rem;
    transition: 0.2s ease-in-out;
  }
  .dropdown{
    transition: 0.2s ease-in-out;
  }
   /* Dropdown Content (Hidden by Default) */
   .dropdown-content {
    display: none;
    transition: 0.3s ease-in-out;
   }

  .dropdown:hover .dropdown-content {
    display: block;
    transition: 0.3s ease-in-out;
  }
   /* Change the background color of the dropdown button when the dropdown content is shown */
   .dropdown:hover .dropbtn, .dropdown .dropbtn .active {
    border-bottom: 1px solid var(--text-color) ;
    transition: 0.2s ease-in-out;
  }
  @media (min-width: 900px) {
       /* The container <div> - needed to position the dropdown content */
    .dropdown{
      position: relative;
    display: inline-block;
    transition: 0.2s ease-in-out;
  }
.icon{
  width: 18%;
  margin-top: 0.3rem;
}
    .dropbtn{
        font-size: 1rem;
        max-width: 130px;
        border-bottom: none;
    }
  

  /* Dropdown Content (Hidden by Default) */
  .dropdown-content {
    display: none;
    position: absolute;
    background-color:#00031caa;
    min-width: 200px;
    z-index: 1;

    border-radius: 0px 0px 7px 7px;
    -webkit-border-radius: 0px 0px 7px 7px;
    -moz-border-radius: 0px 0px 7px 7px;
  }

 
  .dropdown-content div:hover{
    transition: 0.2s ease-in-out;
    border-bottom: 1px solid var(--text-color);
  }

  /* Show the dropdown menu on hover */
  .dropdown:hover .dropdown-content {
    display: block;
  }
   /* Change the background color of the dropdown button when the dropdown content is shown */
   .dropdown:hover .dropbtn, .dropdown .dropbtn .active {
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--text-color) ;
    transition: 0.2s ease-in-out;
  }
  }
</style>
