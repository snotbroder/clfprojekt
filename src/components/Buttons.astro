---
import "../styles/global.css";

const { variant, state, animation } = Astro.props;
---

<button class={variant + " " + state + animation}><slot /></button>

<style>
  button {
    border-radius: 1px;
    border: none;
    cursor: pointer;
  }

  button:active {
    cursor: grabbing;
  }
  /* Primary */
  .primary {
    background-color: var(--background-color-15);
    color: white;
    border: 1px solid var(--text-color);
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    max-height: 4rem;
    padding: 1rem;
  }

  .primary:hover {
    color: var(--primary);
    background-color: var(--background-color-50);

    box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.49);
    -webkit-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.49);
    -moz-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.49);
  }

  .primary:active {
    color: var(--text-color);
    background-color: var(--primary-accent);

    box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
    -webkit-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
    -moz-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
  }
  /* Secondary */
  .secondary {
    background-color: var(--background-color-15);
    color: white;
    border: 1px solid var(--text-color);
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-size: 0.8rem;
    max-height: 2rem;
    padding: 0.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .secondary:hover {
    color: var(--primary);
    background-color: var(--background-color-50);
  }
  .secondary:active {
    color: var(--text-color);
    background-color: var(--primary-accent);
  }

  /* Displaybutton */
  .displaybutton {
    background-color: var(--teritary);
    height: 15rem;
    width: 15rem;
    border-radius: 50%;
    font-family: "nobel-condensed", sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 2.5rem;
    color: var(--text-color);
    outline: 1px solid var(--text-color);
  }

  .displaybutton:hover {
    color: var(--primary-accent);

    box-shadow: 1px -1px 25px 4px rgba(140, 96, 244, 0.84);
    -webkit-box-shadow: 1px -1px 25px 4px rgba(140, 96, 244, 0.84);
    -moz-box-shadow: 1px -1px 25px 4px rgba(140, 96, 244, 0.84);
  }

  .displaybutton:active {
    box-shadow: -1px -1px 12px 5px rgba(10, 143, 193, 0.51);
    -webkit-box-shadow: -1px -1px 12px 5px rgba(10, 143, 193, 0.51);
    -moz-box-shadow: -1px -1px 12px 5px rgba(10, 143, 193, 0.51);
  }

  /* State */
  .buttonselected {
    color: var(--text-color);
    background-color: var(--primary-accent);
    box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
    -webkit-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
    -moz-box-shadow: 1px -1px 13px 1px rgba(217, 217, 217, 0.25);
  }
  .buttonselected:hover {
    color: var(--text-color);
    background-color: var(--primary-accent);
  }

  /* Animation */
  .regularfade {
    transition: 0.2s ease 0s;
  }
</style>
